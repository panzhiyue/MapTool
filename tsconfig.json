{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],  
    "allowJs": true, 
    "checkJs": false, 
    "removeComments": false, 
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": ["**/*.ts","**/*.vue","src/**/**/*.ts","electron/**/**/*.ts","vite.config.ts","types/**/*.d.ts"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
